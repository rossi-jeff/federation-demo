{
  "name": "federation-demo",
  "version": "1.0.0",
  "description": "demo for apollo federation",
  "main": "gateway.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "generate:organizations": "cd services/organizations/ && npx prisma generate",
    "generate:activities": "cd services/activities/ && npx prisma generate",
    "generate:people": "cd services/people/ && npx prisma generate",
    "push:organizations": "cd services/organizations/ && npx prisma db push",
    "push:activities": "cd services/activities/ && npx prisma db push",
    "push:people": "cd services/people/ && npx prisma db push",
    "codegen": "graphql-codegen --config codegen.yml",
    "start:service:activities": "nodemon services/activities/src/server.ts",
    "start:service:organizations": "nodemon services/organizations/src/server.ts",
    "start:service:people": "nodemon services/people/src/server.ts",
    "start:services": "concurrently \"npm:start:service:*\"",
    "start:gateway": "nodemon gateway.ts"
  },
  "author": "Jeff Rossi",
  "license": "ISC",
  "devDependencies": {
    "@graphql-codegen/cli": "2.12.0",
    "@graphql-codegen/typescript": "2.7.3",
    "@graphql-codegen/typescript-resolvers": "2.7.3",
    "concurrently": "^7.4.0",
    "nodemon": "^2.0.19"
  },
  "dependencies": {
    "@apollo/federation": "^0.36.1",
    "@apollo/gateway": "^2.1.1",
    "@graphql-tools/load-files": "^6.6.1",
    "@prisma/client": "^4.3.1",
    "apollo-server": "^3.10.2",
    "graphql": "^16.6.0",
    "prisma": "^4.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  }
}
