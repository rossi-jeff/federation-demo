{
  "name": "federation-demo",
  "version": "1.0.0",
  "description": "demo for apollo federation",
  "main": "gateway.ts",
  "scripts": {
    "test": "jest",
    "generate:organizations": "cd services/organizations/ && npx prisma generate",
    "generate:activities": "cd services/activities/ && npx prisma generate",
    "generate:people": "cd services/people/ && npx prisma generate",
    "push:organizations": "cd services/organizations/ && npx prisma db push",
    "push:activities": "cd services/activities/ && npx prisma db push",
    "push:people": "cd services/people/ && npx prisma db push",
    "codegen": "graphql-codegen --config codegen.yml",
    "start:service:activities": "nodemon services/activities/src/server.ts",
    "start:service:organizations": "nodemon services/organizations/src/server.ts",
    "start:service:people": "nodemon services/people/src/server.ts",
    "start:services": "concurrently \"npm:start:service:*\"",
    "start:gateway": "nodemon services/gateway/gateway.ts",
    "delayed:gateway": "node -e \"setTimeout(() => process.exit(0), 5000)\" && npm run start:gateway",
    "seed": "ts-node seed.ts",
    "format": "prettier --write \"./services/**/*.{ts,tsx,json,graphql}\"",
    "lint": "eslint services --fix --ext .js,.jsx,.ts,.tsx",
    "start": "concurrently \"npm:start:services\" \"npm:delayed:gateway\""
  },
  "author": "Jeff Rossi",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-typescript": "^7.18.6",
    "@graphql-codegen/cli": "2.12.0",
    "@graphql-codegen/typescript": "2.7.3",
    "@graphql-codegen/typescript-resolvers": "2.7.3",
    "@ngneat/falso": "^6.1.0",
    "@types/jest": "^29.0.2",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "babel-jest": "^29.0.3",
    "concurrently": "^7.4.0",
    "eslint": "^8.23.1",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "sinon": "^14.0.0",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "@apollo/federation": "^0.36.1",
    "@apollo/gateway": "^2.1.1",
    "@graphql-tools/load-files": "^6.6.1",
    "@prisma/client": "^4.3.1",
    "apollo-server": "^3.10.2",
    "apollo-server-core": "^3.10.2",
    "graphql": "^16.6.0",
    "prisma": "^4.3.1",
    "ts-node": "^10.9.1",
    "winston": "^3.8.2"
  }
}
